<div class="row">
	<h3> <%= link_to project.name, project %> </h3>
</div>
<div class="row">
	<%= image_tag project.images[0].img.url(:large), class: "col-xs-4 col-sm-4 col-md-4 col-lg-4 author-pic"%>
	
	<div class="col-md-8">
		<%= link_to "#{project.description[0..250]}...", project %>
	</div>
</div>
<div class="row project-links">
	<div class="col-md-6">
		<%= link_to "Live", project.live_link, class: "btn btn-primary" %>
	</div>
	<div class="col-md-6">
		<%= link_to "Github", project.github, class: "btn btn-primary" %><br>
	</div>
</div>