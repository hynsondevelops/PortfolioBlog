<div class="container-fluid">
	<div class="row post-body">
		<div class="col-md-2">
		</div>
		<div class="col-md-8">
			<div class="post-title">
				<h1> <%= @post.title %> </h1>
				<%= render partial: "associated_tags", :locals => {tags: @post.tags} %>
			</div>
			<%= @content %>
		</div>
		<div class="col-md-2">
		</div>
	</div>
	<% @related_posts.each_with_index do |post, index| %>
		<% if index==0 %>
			<div class="row">
			<div class="col-md-4 author-box">
				<%= render partial: "users/author", :locals => {user: @post.author} %>
			</div>
		<% elsif index % 2 == 0 %>
			<div class="row">
		<% end %>
		<div class="col-md-4">
			<%= render partial: "thumb", :locals => {post: post} %>
		</div>
		<% if (index!=0 && index % 2 == 0) || (index==(@related_posts.size - 1)) %>
			</div>
		<% end %>
	<% end %>
</div>



